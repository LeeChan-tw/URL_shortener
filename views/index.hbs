<div class="container justify-text-center">
  <div class="bg-warning">
    <h2>Link Shortener</h2>
    <i class="fas fa-exchange-alt"></i>
  </div>
  <div class="bg-light">
    <form action="/" method="POST">
      <div class="form-row justify-content-center">
        <label for="originLink">The Link that you want to shorten</label>
        <input type="URL" placeholder="Input URL like http://..... " id="originLink" name="originLink"
          class="form-control" value="{{ originLink }}" required>
        <button type="submit" class="btn btn-info">Shorten</button>
      </div>
    </form>
  </div>
  <div class="bg-light">
    <div class="row mt-4">
      <a href="{{ originLink }}" class=" col-11 mx-auto">
        <input class='text-primary  mx-auto form-control' type="text" placeholder="Short URL..." id="shortURL"
          value='{{ shortenLink }}' readonly>
      </a>
    </div>
    <div class="row">
      <button class="col-2 mx-auto my-3 btn btn-outline-primary" onclick="copyText()">Copy</button>
    </div>
  </div>
</div>