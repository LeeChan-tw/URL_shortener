<div class="container justify-text-center">
  <div class="bg-warning">
    <h2>Link Shortener</h2>
    <i class="fas fa-exchange-alt"></i>
  </div>
  <div class="bg-light">
    <form action="/links" method="POST">
      <div class="form-row justify-content-center">
        <label for="originLink">The Link that you want to shorten</label>
        <input type="URL" placeholder="Input URL like http://..... " id="originLink" name="originLink"
          class="form-control" required>
        <button type="submit" class="btn btn-info">Shorten</button>
      </div>
    </form>
  </div>
  <div class="bg-light">
    <ul>
      <h4>Shorten History</h4>
      <li></li>
    </ul>
  </div>
</div>